{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mb-3">
        <div class="col-md-2">
            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary btn-user btn-block" >< Retour</a>
        </div>
    </div>
    <section style="background-color: #eee;">
        <div class="container py-4">
            {% if user.isChangePassword() == 0 and is_granted('ROLE_ADMIN')%}
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-warning" role="alert">
                            {{ user.getFirstName()|capitalize }} n'a pas changé son mot de passe provisoir.
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="row">
                {{ include('user/card_user.html.twig') }}
                <div class="col-lg-8">
                    <div class="col-lg-12">
                        <div class="card mb-4">
                            <div class="card-body">
                                {% if updateGeneralIntern == 1 %}
                                    <div class="alert alert-success" role="alert">
                                        Le profil de {{ user.firstName}} à bien été mis à jour.
                                    </div>
                                {% endif %}
                                {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

